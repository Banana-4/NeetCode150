class Solution:
    def longestConsecutive(self, nums: List[int]) -> int:
        all_nums = set(nums)
        longest = 0
        length = 0
        total_length = 0
        for n in all_nums:
            if n + 1 not in all_nums:   
                while n in all_nums:
                    length += 1      
                    n -= 1    
                total_length += length
                longest = max(longest, length)
                if total_length == len(all_nums):
                    break
                length = 0
        return longest
