class Solution:
    def checkInclusion(self, s1: str, s2: str) -> bool:
        s1_letters = [0] * 26
        for ltr in s1:
            idx = ord(ltr) - ord('a')
            s1_letters[idx] += 1

        left, right = 0, 0

        win_letters = [0] * 26
        idx = ord(s2[0]) - ord('a')
        win_letters[idx] += 1
        win_size = len(s1)
        while True:
            if right - left + 1 != win_size:
                right += 1
                if right == len(s2):
                    return win_letters == s1_letters
                idx = ord(s2[right]) - ord('a')
                win_letters[idx] += 1 
            else:
                if win_letters == s1_letters:
                    return True
                idx = ord(s2[left]) - ord('a')
                win_letters[idx] -= 1
                left += 1
